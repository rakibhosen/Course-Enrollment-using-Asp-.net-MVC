@model IEnumerable<MvcEvidence.Models.Student>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(x => x.StudentImage)</th>
            <th>@Html.DisplayNameFor(x => x.StudentName)</th>
            <th>@Html.DisplayNameFor(x => x.EnrollmentDate)</th>
            <th>@Html.DisplayNameFor(x => x.CourseId)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td><img src="~/Images/@b.StudentImage" width="40" class="img-thumbnail" /></td>
                <td>@Html.DisplayFor(x => b.StudentName) </td>
                <td>@Html.DisplayFor(x => b.EnrollmentDate) </td>
                <td>@Html.DisplayFor(x => b.Course.CourseName) </td>
                <td style="width:150px;" class="text-center">

                    <a title="Edit this item" href="@Url.Action("Edit", "Student", new { id=b.StudentId})" class="btn btn-primary btn-sm rounded-0"><i class="fa fa-edit"></i></a>
                    <a title="Delete this item" href="#" class="btn btn-danger btn-sm rounded-0 " data-toggle="modal" data-target="#deleteModal-@b.StudentId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>

            <!-- Delete  Modal -->
            <div class="modal" id="deleteModal-@b.StudentId">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <strong>Are you sure want to delete?</strong>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body d-flex justify-content-center">


                            <form action="Student/Delete/@b.StudentId" method="post">
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-sm btn-danger rounded-0" />

                                </div>
                            </form>
                        </div>



                    </div>
                </div>
            </div>



        }
    </tbody>
</table>